<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AecrcaFragment">

    <TextView
        android:id="@+id/txtTitulo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ACERCA"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        android:gravity="center"
        android:textSize="20dp"
        android:layout_marginTop="30dp"/>

    <LinearLayout
        android:id="@+id/layout_texto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtTitulo"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:layout_marginTop="10dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="CALCULADORA DE NOTAS"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="18dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="VersiÃ³n 1.5"
            android:gravity="center"
            android:textStyle="bold"/>
    </LinearLayout>

    <ImageView
        android:id="@+id/logoWifix"
        android:layout_width="300dp"
        android:layout_height="150dp"
        android:src="@drawable/logo_loyal"
        android:layout_marginTop="90dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/txtTitulo"/>

    <TextView
        android:id="@+id/txtDesa"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="DESARROLLADORES"
        android:gravity="center"
        android:textStyle="bold"
        android:textSize="18dp"
        android:layout_below="@id/logoWifix" />

    <TextView
        android:id="@+id/txtNombreEmpresa"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtDesa"
        android:layout_marginTop="2dp"
        android:gravity="center"
        android:text="LOYAL SOFT"
        android:textSize="17dp"
        android:textStyle="italic" />

</RelativeLayout>